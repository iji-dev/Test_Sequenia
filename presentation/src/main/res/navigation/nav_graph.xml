<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MovieFeedFragment"
    >

    <fragment
        android:id="@+id/MovieFeedFragment"
        android:name="dev.iji.presentation.ui.MoviesFeedFragment"
        android:label="@string/movies"
        tools:layout="@layout/fragment_feed_movies"
        >

        <action
            android:id="@+id/action_MovieFeedFragment_to_MovieDetailsFragment"
            app:destination="@id/MovieDetailsFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/MovieDetailsFragment"
        android:name="dev.iji.presentation.ui.MovieDetailsFragment"
        tools:layout="@layout/fragment_details_movie"
        >

        <action
            android:id="@+id/action_MovieDetailsFragment_to_MovieFeedFragment"
            app:destination="@id/MovieFeedFragment"
            />
    </fragment>
</navigation>